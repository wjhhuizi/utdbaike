@model ccbs.Models.Meeting
@{
    ViewBag.Title = "新建会议记录";
}
<div id="content">
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <div>
        @Html.ActionLink("返回", "Index")
    </div>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <fieldset>
            <legend>新建会议记录</legend>
            <div class="editor-label">
                @Html.LabelFor(model => model.Date, "会议日期")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Date)
                @Html.ValidationMessageFor(model => model.Date)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.NumOfAtt, "参与人数")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.NumOfAtt)
                @Html.ValidationMessageFor(model => model.NumOfAtt)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.AttNames, "人员名单")
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.AttNames)
                @Html.ValidationMessageFor(model => model.AttNames)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Agenda, "会议议题")
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.Agenda, new { @class = "text-area-edit" })
                @Html.ValidationMessageFor(model => model.Agenda)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Content, "会议纪要")
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.Content, new { @class = "text-area-edit" })
                @Html.ValidationMessageFor(model => model.Content)
            </div>
            <p>
                <input type="submit" value="保存" />
            </p>
        </fieldset>
    }
    <div>
        @Html.ActionLink("返回", "Index")
    </div>
    <br class="clearfix" />
</div>
<div>
    @{Html.RenderPartial("_Sidebar");}
</div>
