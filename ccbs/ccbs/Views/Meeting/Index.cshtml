@model IEnumerable<ccbs.Models.Meeting>
@{
    ViewBag.Title = "会议记录列表";
}
<div id="content">
    <h2>
        会议记录</h2>
    <p>
        @Html.ActionLink("新建", "Create")
    </p>
    <table>
        <tr>
            <th>
                日期
            </th>
            <th>
                人数
            </th>
            <th>
                名单
            </th>
            <th>
                议题
            </th>
            <th>
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                <abbr title="详细内容">
                    @Html.ActionLink(item.Date.ToString("MM/dd/yy"), "Details", new { id = item.Id })</abbr><p>@item.Date.ToString("h:mm tt")</p>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumOfAtt)
                </td>
                <td>
                    <textarea rows="8" cols="12" readonly="readonly" class="text-area-in-table">@item.AttNames</textarea>
                </td>
                <td>
                    <textarea rows="8" cols="35" readonly="readonly" class="text-area-in-table">@item.Agenda</textarea>
                </td>
                <td>
                    @Html.ActionLink("编辑", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("明细", "Details", new { id = item.Id }) |
                    @Html.ActionLink("删除", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
    <br class="clearfix" />
</div>
<div>
    @{Html.RenderPartial("_Sidebar");}
</div>
