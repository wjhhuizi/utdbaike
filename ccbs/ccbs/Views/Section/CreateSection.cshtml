@model ccbs.Models.Section
@{
    ViewBag.Title = "Add a section";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div id="content-no-sidebar">
    <div class="box" style="width: 400px; margin-left: auto; margin-right: auto;">
        <h4>
            Add a new section</h4>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <div class="editor-field">
                @Html.LabelFor(model => model.IsOnHomePage, "Section for on Homepage ?")
                @Html.EditorFor(model => model.IsOnHomePage)
                @Html.ValidationMessageFor(model => model.IsOnHomePage)
            </div>
            <div class="editor-field">
                @Html.LabelFor(model => model.Title)
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>
            <div class="editor-field">
                @Html.LabelFor(model => model.TitleColor, "Color")
                <input type="color" value="#87CEFA" name="TitleColor" id="TitleColor" />
                @Html.ValidationMessageFor(model => model.TitleColor)
            </div>
            <div class="editor-field">
                @Html.LabelFor(model => model.Order)
                @Html.EditorFor(model => model.Order)
                @Html.ValidationMessageFor(model => model.Order)
            </div>
            <div class="editor-field">
                @Html.LabelFor(model => model.Capacity)
                @Html.EditorFor(model => model.Capacity)
                @Html.ValidationMessageFor(model => model.Capacity)
            </div>
            <p>
                <input type="submit" value="Create" />
            </p>
        }
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
        <br class="clearfix" />
    </div>
</div>
