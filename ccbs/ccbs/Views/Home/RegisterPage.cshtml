@using myResources = ccbs.Views.Home.HomeResources
@{
    var year = ccbs.Models.Semester.this_year();
    var semester = ccbs.Models.Semester.this_semester();
    var title = year + " " + semester + " " + myResources.Reg_Tite;
    ViewBag.Title = title;
}
<div id="content-no-sidebar">
    <h2 style="text-align: center;">
        @title</h2>
    <div style="padding-left: 150px; padding-top: 50px;">
        <ul>
            <li style="display: inline;">
                <button onclick="window.location.href='../Volunteer/VolunteerRegister'" style="width: 350px;
                    height: 60px;">
                    <b style="font-size: large; color: Blue;">@myResources.Reg_Volunteer</b></button>
            </li>
            <li style="display: inline; padding-left: 50px;">
                <button onclick="window.location.href='../NewStudent/Disclaimer'" style="width: 350px;
                    height: 60px;">
                    <b style="font-size: large; color: Blue;">@myResources.Reg_NewStudent</b></button>
            </li>
        </ul>
    </div>
    <br class="clearfix" />
</div>
