@model ccbs.Models.Group
@{
    ViewBag.Title = "Delete A Group";
}
<div id="content-no-sidebar">
    <h2>
        Delete</h2>
    <h3>
        Are you sure you want to delete this?</h3>
    <fieldset>
        <legend>VolunteerGroup</legend>
        <div class="display-label">
            Name</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Name)
        </div>
        <div class="display-label">
            Description</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Description)
        </div>
        <div class="display-label">
            Orgnization</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Organization.Name)
        </div>
    </fieldset>
    @using (Html.BeginForm())
    {
        <p>
            <input type="submit" value="Delete" />
        </p>
    }
    <div style="padding-top: 20px;">
        <a onclick="window.history.go(-1);return false;">Go Back</a>
    </div>
    <br class="clearfix" />
</div>
