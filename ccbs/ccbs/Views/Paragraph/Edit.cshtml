@model ccbs.Models.Paragraph
@{
    ViewBag.Title = "Edit";
}
<div id="content">
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <div>
        @Html.ActionLink("返回", "Details", "News", new { id = Model.NewsId }, null)
    </div>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <fieldset>
            <legend>段落编辑</legend>
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.NewsId)
            @Html.HiddenFor(model => model.Image)
            <div class="editor-label">
                @Html.LabelFor(model => model.SubTitle, "段落标题")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.SubTitle)
                @Html.ValidationMessageFor(model => model.SubTitle)
            </div>
            <div class="editor-label">
                <img src="@Model.Image" alt=""/>
            </div>
            <div class="editor-field">
                @(Html.Telerik().Upload()
                            .Name("newsPhotos")
                            .Multiple((bool)false))
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.TextContent, "段落文字内容")
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.TextContent, new { @class = "text-area-edit" })
                @Html.ValidationMessageFor(model => model.TextContent)
            </div>
            <p>
                <input type="submit" value="保存" />
            </p>
        </fieldset>
    }
    <div>
        @Html.ActionLink("返回", "Details", "News", new { id = Model.NewsId }, null)
    </div>
    <br class="clearfix" />
</div>
<div>
    @{Html.RenderAction("_newsSidebar", "News", null);}
</div>
