@model ccbs.Models.HomeGallery
@{
    ViewBag.Title = "新加图片";
}
<div id="content">
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <div>
        @Html.ActionLink("返回", "Index")
    </div>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <fieldset>
            <legend>新加图片</legend>
            @Html.HiddenFor(model => model.Id)
            <div class="editor-label">
                @Html.LabelFor(model => model.Picture, "图片")
            </div>
            <div class="editor-field">
                @(Html.Telerik().Upload()
                            .Name("newsPhotos")
                            .Multiple((bool)false))
                <p style="color: Blue;">
                    The picture size should satisfy width:height = 4:1
                </p>
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Title, "标题")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Description, "描述")
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.Description, new { @class = "text-area-edit" })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.HyperLink, "链接")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.HyperLink)
                @Html.ValidationMessageFor(model => model.HyperLink)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Order, "次序")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Order)
                @Html.ValidationMessageFor(model => model.Order)
            </div>
            <p>
                <input type="submit" value="创建" />
            </p>
        </fieldset>
    }
    <div>
        @Html.ActionLink("返回", "Index")
    </div>
    <br class="clearfix" />
</div>
<div>
    @{Html.RenderPartial("_Sidebar");}
</div>
