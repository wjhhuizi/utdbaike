                @Html.LabelFor(model => model.NeedPickup, "Do you need a Pickup?")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.NeedPickup)
                @Html.ValidationMessageFor(model => model.NeedPickup)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.NeedTempHousing, "Do you need a Temp Housing?")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.NeedTempHousing)
                @Html.ValidationMessageFor(model => model.NeedTempHousing)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Note)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.Note)
                @Html.ValidationMessageFor(model => model.Note)
            </div>
            <p>
                <input type="submit" value="Create" />
            </p>
        </fieldset>
    }
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
    <br class="clearfix" />
</div>
<div>
    @{Html.RenderPartial("_Sidebar");}
</div>
