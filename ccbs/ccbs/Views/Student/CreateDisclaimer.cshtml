@model ccbs.Models.Disclaimer
@{
    ViewBag.Title = "Create a Disclaimer";
}
<div id="content">
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.LastUpdate)
        <div class="editor-label">
            @Html.LabelFor(model => model.Title, "标题")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Description, "内容")
        </div>
        <div class="editor-field">
            @{ Html.Telerik().Editor()
                    .Name("Description")
                    .Tools(tools => tools
                                .Clear().FontSize()
                                .Bold().Italic().Underline().FontColor().BackColor().Indent().JustifyFull().JustifyCenter().JustifyLeft().JustifyRight().InsertOrderedList().InsertUnorderedList()
                                .Separator()
                                .CreateLink().Unlink()
                            )
                    .HtmlAttributes(new { style = "height:400px" })
                    .Encode(true)
                    .Render();
            }
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        <p>
            <input type="submit" value="保存" />
        </p>
    }
    <br class="clearfix" />
</div>
<div>
    @{Html.RenderPartial("_Sidebar");}
</div>
