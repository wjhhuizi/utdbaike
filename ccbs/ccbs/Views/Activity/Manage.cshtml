@model IEnumerable<ccbs.Models.Activity>
@{
    ViewBag.Title = "Manage Activities";
    List<ccbs.Models.Activity> futureActivities = ViewBag.futureActivities;
    List<ccbs.Models.Activity> pastActivities = ViewBag.pastActivities;
}
<div id="content-no-sidebar">
    <h2>
        Manage Activities</h2>
    <p>
        @Html.ActionLink("创建", "Create")
    </p>
    @if (futureActivities.Count > 0)
    {
        <div>
            <b style="color: Red;">The coming Activities</b><br />
            <table>
                <tr>
                    <th>
                        主题
                    </th>
                    <th>
                        开始时间
                    </th>
                    <th>
                        结束时间
                    </th>
                    <th>
                        地址
                    </th>
                    <th>
                        简介
                    </th>
                    <th>
                    </th>
                </tr>
                @foreach (var item in futureActivities)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(item.Title, "Details", new { id = item.Id })
                        </td>
                        <td>
                            @item.TimeFrom.ToString("MM/dd/yy")<p>@item.TimeFrom.ToString("h:mm tt")</p>
                        </td>
                        <td>
                            @item.TimeTo.ToString("MM/dd/yy")<p>@item.TimeTo.ToString("h:mm tt")</p>
                        </td>
                        <td>
                            <textarea rows="5" cols="20" readonly="readonly" class="text-area-in-table">@item.Address</textarea>
                        </td>
                        <td>
                            <textarea rows="8" cols="50" readonly="readonly" class="text-area-in-table">@item.Description</textarea>
                        </td>
                        <td>
                            @Html.ActionLink("编辑", "Edit", new { id = item.Id })<br />
                            @Html.ActionLink("删除", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </table>
        </div>
    }
    @if (pastActivities.Count > 0)
    {
        <div style="padding: 20px;">
            <b style="color: Red;">The past Activities</b><br />
            <table>
                <tr>
                    <th>
                        主题
                    </th>
                    <th>
                        开始时间
                    </th>
                    <th>
                        结束时间
                    </th>
                    <th>
                        地址
                    </th>
                    <th>
                        描述
                    </th>
                    <th>
                    </th>
                </tr>
                @foreach (var item in pastActivities)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(item.Title, "Details", new { id = item.Id })
                        </td>
                        <td>
                            @item.TimeFrom.ToString("MM/dd/yy")<p>@item.TimeFrom.ToString("h:mm tt")</p>
                        </td>
                        <td>
                            @item.TimeTo.ToString("MM/dd/yy")<p>@item.TimeTo.ToString("h:mm tt")</p>
                        </td>
                        <td>
                            <textarea rows="5" cols="20" readonly="readonly" class="text-area-in-table">@item.Address</textarea>
                        </td>
                        <td>
                            <textarea rows="8" cols="50" readonly="readonly" class="text-area-in-table">@item.Description</textarea>
                        </td>
                        <td>
                            @Html.ActionLink("编辑", "Edit", new { id = item.Id })<br />
                            @Html.ActionLink("删除", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </table>
        </div>
    }
    <br class="clearfix" />
</div>
