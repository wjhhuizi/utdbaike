@model IEnumerable<ccbs.Models.EmailRecord>
@{
    ViewBag.Title = "发送给新生或志愿者的邮件";
}
<div id="content">
    <h2>
        发送给新生或志愿者的邮件</h2>
    <p>
        @Html.ActionLink("创建", "Create")
    </p>
    <table>
        <tr>
            <th>
                标题
            </th>
            <th>
                上次更新
            </th>
            <th>
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @item.LastUpdate.ToString("MM/dd/yyyy hh:mm tt")
                </td>
                <td>
                    @Html.ActionLink("查看", "Details", new { id = item.Id }) |
                    @Html.ActionLink("编辑", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("删除", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
    <br class="clearfix" />
</div>
<div>
    @{Html.RenderPartial("_Sidebar");}
</div>
