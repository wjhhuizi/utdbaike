@model ccbs.Models.OrgRequest
@{
    ViewBag.Title = "Request New Students From System";
}
<div id="content">
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <fieldset>
            <legend>Request New Students From System</legend>
            @Html.HiddenFor(model => model.Reply)
            @Html.HiddenFor(model => model.Progress)
            @Html.HiddenFor(model => model.RequestDate)
            <div class="editor-label">
                @Html.LabelFor(model => model.NumOfNews, "How many new students will you request?")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.NumOfNews)
                @Html.ValidationMessageFor(model => model.NumOfNews)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Note, "Any Notes?")
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.Note)
                @Html.ValidationMessageFor(model => model.Note)
            </div>
            <br />
            <p>
                <input type="submit" value="Submit" />
            </p>
        </fieldset>
    }
</div>
<div>
    @{Html.RenderPartial("_Sidebar");}
</div>
