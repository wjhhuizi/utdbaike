@inherits System.Web.Mvc.WebViewPage
@using System.Web.Mvc.Html
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Mobile/Mobile.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="../../Content/SmoothGallery-1.2-namespaced/css/jd.gallery.css"
        type="text/css" media="screen" charset="utf-8" />
    @(Html.Telerik().StyleSheetRegistrar()
                      .DefaultGroup(group => group
                          .Add("telerik.common.css")
                          .Add("telerik.vista.css")
                          .Combined(true)
                          .Compress(true))
                     )
    <script type="text/javascript" src="../../ckeditor/ckeditor.js"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/MicrosoftAjax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/MicrosoftMvcAjax.js")" type="text/javascript"></script>
    <!-- load jQuery -->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.js"></script>
    <script src="../../Content/SmoothGallery-1.2-namespaced/scripts/mootools.namespaced.js"
        type="text/javascript"></script>
    <script src="../../Content/SmoothGallery-1.2-namespaced/scripts/jd.gallery.namespaced.js"
        type="text/javascript"></script>
</head>
<body>
    <div id="wrapper">
        <div id="page">
            @RenderBody()
            <br class="clearfix" />
        </div>
    </div>
    <div id="footer">
        <div>
            Copyright (c) 2012 <a href="../Home/Index">帮帮网</a>. All rights reserved.
        </div>
    </div>
    @(Html.Telerik().ScriptRegistrar().DefaultGroup(group => group.Compress(true).Combined(true)))</body>