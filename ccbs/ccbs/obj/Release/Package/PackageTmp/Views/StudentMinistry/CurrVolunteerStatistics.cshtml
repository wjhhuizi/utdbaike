@using myResources = ccbs.Views.StudentMinistry.StudentMinstryResources
@{
    ViewBag.Title = myResources.Stat_Title;
    Layout = null;
    int i = 0;
    ccbs.Models.Organization currOrg = ViewBag.org;
}
<div>
    <p style="font-size: larger; text-align: center; font-weight: bold;">
        @myResources.Stat_Org</p>
    <table>
        <tr>
            <th>
                No.
            </th>
            <th>
                @myResources.Stat_OrgName
            </th>
            <th>
                @myResources.Stat_StudNum
            </th>
            <th>
                @myResources.Stat_Pickup
            </th>
            <th>
                @myResources.Stat_Housing
            </th>
        </tr>
        @{
            i = 0;
            foreach (var org in ViewBag.allStatistics as List<ccbs.Models.StatisticTableView>)
            {
                i++;
            <tr>
                <td>
                    @i
                </td>
                <td>
                    @org.Name
                </td>
                <td>
                    @org.TotalStud
                </td>
                <td>
                    @org.PickupNum
                </td>
                <td>
                    @org.HousingNum
                </td>
            </tr>
            }
        }
    </table>
</div>
@if (currOrg.ModelType == ccbs.Models.OrgModelType.IntGrouped)
{
    <div style="padding-top: 10px;">
        <p style="font-size: larger; text-align: center; font-weight: bold;">
            @currOrg.Name @myResources.Stat_Group</p>
        <table>
            <tr>
                <th>
                    No.
                </th>
                <th>
                    @myResources.Stat_GroupName
                </th>
                <th>
                    @myResources.Stat_StudNum
                </th>
                <th>
                    @myResources.Stat_Pickup
                </th>
                <th>
                    @myResources.Stat_Housing
                </th>
            </tr>
            @{
    i = 0;
    foreach (var grp in ViewBag.orgStatistics as List<ccbs.Models.StatisticTableView>)
    {
        i++;
                <tr>
                    <td>
                        @i
                    </td>
                    <td>
                        @grp.Name
                    </td>
                    <td>
                        @grp.TotalStud
                    </td>
                    <td>
                        @grp.PickupNum
                    </td>
                    <td>
                        @grp.HousingNum
                    </td>
                </tr>
    }
            }
        </table>
    </div>
}