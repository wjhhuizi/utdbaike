@model ccbs.Models.RegisterEntry
@{
    ViewBag.Title = "编辑日程";
}
<div id="content-no-sidebar">
    <div class="box" style="width: 300px; margin-left: auto; margin-right: auto;">
        <h3 style="text-align: center;">
            编辑日程</h3>
        @using (Html.BeginForm("EditRegisterEntry", "LocalHelp", FormMethod.Post))
        {
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.LocalHelpId)
            <div class="editor-field">
                <b>时间：</b>
                @Html.EditorFor(model => model.Time)
                @Html.ValidationMessageFor(model => model.Time)
            </div>
            <div class="editor-field">
                <b>地点：</b><br />
                @Html.TextAreaFor(model => model.Address)
                @Html.ValidationMessageFor(model => model.Address)
            </div>
            <div class="editor-field">
                <b>联系方式：</b><br />
                @Html.TextAreaFor(model => model.Contact)
                @Html.ValidationMessageFor(model => model.Contact)
            </div>
            <div class="editor-field">
                <b>允许注册？</b> @Html.EditorFor(model => model.IsActive)
                @Html.ValidationMessageFor(model => model.IsActive)
            </div>
            <div style="float: right; padding-top: 20px;">
                <input type="submit" value="保存" style="width: 80px; background-color: Orange;" />
            </div>
        }
    </div>
</div>
