@model ccbs.Models.ManualAssignInfo
@{
    Layout = null;
}
@{Html.Telerik().Window()
        .Name("Window")
        .Title("志愿者信息")
        .Content(@<text>
    @using (Html.BeginForm("popupform", "window", FormMethod.Post, new { id = "feedback-form" }))
    {
        @Html.LabelFor(model => model.VolName)
        @Html.TextBoxFor(model => model.VolName)
        @Html.ValidationMessageFor(model => model.VolName)
        @Html.LabelFor(model => model.VolGender)
        @Html.TextBoxFor(model => model.VolGender)
        @Html.ValidationMessageFor(model => model.VolGender)
        @Html.LabelFor(model => model.VolEmail)
        @Html.TextBoxFor(model => model.VolEmail)
        @Html.ValidationMessageFor(model => model.VolEmail)
        @Html.LabelFor(model => model.VolPhone)
        @Html.TextBoxFor(model => model.VolPhone)
        @Html.ValidationMessageFor(model => model.VolPhone)
        @Html.LabelFor(model => model.VolAddr)
        @Html.TextBoxFor(model => model.VolAddr)
        @Html.ValidationMessageFor(model => model.VolAddr)
        <div class="form-actions">
            <button type="submit" class="t-button t-state-default">
                提交</button>
        </div>
    }
    </text>)
        .Width(400)
        .Draggable(true)
        .Modal(true)
        .Visible(true)
        .Render();
}
