@model ccbs.Models.HomeGallery
@{
    ViewBag.Title = "Edit";
}
<div id="content">
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <div>
        @Html.ActionLink("返回", "Index")
    </div>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <fieldset>
            <legend>编辑图片</legend>
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Picture)
            <div class="editor-label">
                <img src="@ccbs.Controllers.HomeGalleryController.ToThumbnailPath(Model.Picture)" alt="@Model.Title"/>
            </div>
            <div class="editor-field">
                @(Html.Telerik().Upload()
                            .Name("newsPhotos")
                            .Multiple((bool)false))
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Title, "标题")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Description, "描述")
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.Description, new { @class = "text-area-edit" })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.HyperLink, "链接")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.HyperLink)
                @Html.ValidationMessageFor(model => model.HyperLink)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Order, "次序")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Order)
                @Html.ValidationMessageFor(model => model.Order)
            </div>
            <p>
                <input type="submit" value="保存" />
            </p>
        </fieldset>
    }
    <div>
        @Html.ActionLink("返回", "Index")
    </div>
    <br class="clearfix" />
</div>
<div>
    @{Html.RenderPartial("_Sidebar");}
</div>
