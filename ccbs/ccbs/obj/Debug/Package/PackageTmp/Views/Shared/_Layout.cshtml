<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/oceania/style.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/woothemes-FlexSlider/flexslider.css")" type="text/css" media="screen" />
    <link rel="stylesheet" href="../../Content/SmoothGallery-1.2-namespaced/css/jd.gallery.css"
        type="text/css" media="screen" charset="utf-8" />
    @(Html.Telerik().StyleSheetRegistrar()
                      .DefaultGroup(group => group
                          .Add("telerik.common.css")
                          .Add("telerik.vista.css")
                          .Combined(true)
                          .Compress(true))
                     )
    <script type="text/javascript" src="../../ckeditor/ckeditor.js"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/MicrosoftAjax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/MicrosoftMvcAjax.js")" type="text/javascript"></script>
    <!-- load jQuery -->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.js"></script>
    <script src="../../Content/SmoothGallery-1.2-namespaced/scripts/mootools.namespaced.js"
        type="text/javascript"></script>
    <script src="../../Content/SmoothGallery-1.2-namespaced/scripts/jd.gallery.namespaced.js"
        type="text/javascript"></script>
</head>
<body>
    <div id="wrapper">
        <div id="header">
            <div id="logo">
                <img src="../../Content/oceania/images/logo.jpg" alt="FACSS" />
            </div>
            <div id="lang-sel">
                @Html.ActionLink("[中文]", "Language", "Home", new { language = "zh-CN", returnUrl = Request.RawUrl }, null)
                &nbsp&nbsp
                @Html.ActionLink("[English]", "Language", "Home", new { language = "en-US", returnUrl = Request.RawUrl }, null)
            </div>
            <div id="header-text">
                <h3 style="color: Orange;">
                    @Resources.UTDBaikeResources.Website_Title</h3>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="menu">
                <ul>
                    <li>@Html.ActionLink(@Resources.UTDBaikeResources.Menu_HomePage, "Index", "Home")</li>
                    <li><a href="http://bbs.facss.us/index.php" target="_blank">@Resources.UTDBaikeResources.Menu_BBS</a></li>
                    <li>@Html.ActionLink(@Resources.UTDBaikeResources.Menu_RegisterPage, "RegisterPage", "Home")</li>
                    <li>@Html.ActionLink(@Resources.UTDBaikeResources.Menu_UTDBaike, "Index", "Article")</li>
                    <li>@Html.ActionLink(@Resources.UTDBaikeResources.Menu_QandA, "AllQuestions", "QandA")</li>
                    <li>@Html.ActionLink(@Resources.UTDBaikeResources.Menu_Contact, "Contact", "Home")</li>
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink(@Resources.UTDBaikeResources.Menu_MyPage, "MyHomePage", "Account")</li>
                    }
                </ul>
                <br class="clearfix" />
            </div>
        </div>
        <div id="page">
            @RenderBody()
            <br class="clearfix" />
        </div>
    </div>
    <div id="footer">
        <div>
            Copyright (c) 2012 <a href="../Home/Index">UTD中国学生会新生接待网站</a>. All rights reserved.
        </div>
    </div>
    @(Html.Telerik().ScriptRegistrar().DefaultGroup(group => group.Compress(true).Combined(true)))</body>
</html>
