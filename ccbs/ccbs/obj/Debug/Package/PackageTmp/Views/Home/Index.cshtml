@using HomeResources = ccbs.Views.Home.HomeResources
@{
    ViewBag.Title = @Resources.UTDBaikeResources.Website_Title;
    List<ccbs.Models.HomeGallery> homeGalleries = ViewBag.homeGalleries;
}
<div id="content-no-sidebar-no-padding">
    <div>
        <script type="text/javascript">
            function startGallery() {
                var myGallery = new gallery(Moo.$('myGallery'), {
                    timed: true
                });
            }
            window.onDomReady(startGallery);
        </script>
    </div>
    <div id="myGallery">
        @foreach (var pic in homeGalleries)
        {
            <div class="imageElement">
                @if (!String.IsNullOrEmpty(pic.Title))
                {
                    <h3>
                        @pic.Title</h3>
                }
                @if (!String.IsNullOrEmpty(pic.Description))
                {
                    <p>
                        @pic.Description</p>
                }
                @if (!String.IsNullOrEmpty(pic.HyperLink))
                {
                    <a href="@pic.HyperLink" title="open link" class="open"></a>
                }
                <img src="@pic.Picture" class="full" />
                <img src="@ccbs.Controllers.HomeGalleryController.ToThumbnailPath(pic.Picture)"
                    class="thumbnail" />
            </div>
        }
    </div>
    <br class="clearfix" />
    <div>
        <div id="left-most-box">
            <h3>
                @HomeResources.Section_RAs_Title
            </h3>
            <div class="mainpart">
                <div style="padding-left: 3px; padding-top: 3px;">
                    @{Html.RenderAction("_RecentLocalHelps", "LocalHelp", null);}
                </div>
            </div>
        </div>
        <div id="middle-box">
            <h3>
                @HomeResources.Section_BNs_Title</h3>
            <div class="mainpart">
                <div style="padding-left: 3px; padding-top: 3px;">
                    @{Html.RenderAction("LatestArticles", "Article", null);}
                </div>
            </div>
        </div>
        <div id="middle-box2">
            <h3>
                @HomeResources.Section_BRs_Title</h3>
            <div class="mainpart">
                <div style="padding-left: 3px; padding-top: 3px;">
                    @{Html.RenderAction("PopularArticles", "Article", null);}
                </div>
            </div>
        </div>
        <div id="right-most-box">
            <h3>
                @HomeResources.Section_LogOn_Title</h3>
            <div class="mainpart">
                <div style="padding-left: 4px; padding-top: 3px;">
                    @if (!Request.IsAuthenticated)
                    {
                        <span>
                            @{Html.RenderPartial("_LogOn");}
                        </span>
                    }
                    else
                    {
                        <div style="text-align: center; color: Orange;">
                            <p>
                                @HomeResources.Log_On_Success</p>
                            <b>Welcome @User.Identity.Name</b>
                        </div>
                        <br />
                        <div style="text-align: center;">
                            @Html.ActionLink("Log Off", "LogOff", "Account")
                        </div>
                    }
                </div>
            </div>
        </div>
        <br class="clearfix" />
    </div>
</div>
