@model ccbs.Models.Coworker
@{
    ViewBag.Title = Model.Name;
    String surfix = (Model.Gender == 0) ? "姊妹" : "弟兄";
}
<div id="content">
    <div id="coworker-profile-title">
        <h2 style="text-align: center;">
            @Model.Name @surfix</h2>
    </div>
    <div id="coworker-profile-selfphoto">
        <img src="@Model.SelfPhoto" alt="@Model.Name" width="300"/>
    </div>
    <div id="coworker-profile-intro">
        @Html.TextAreaFor(model => model.SelfIntro, new { @class = "text-area-coworker-profile-intro", @readonly = "readonly" })
    </div>
    <br class="clearfix" />
    <div id="coworker-profile-baptise-photo">
        <h4 style="text-align: center;">
            见证分享</h4>
        <img src="@Model.BaptisePhoto" alt="Baptise Photo" width="700"/>
    </div>
    <div id="coworker-profile-testimony">
        @Html.TextAreaFor(model => model.Testimony, new { @class = "text-area-coworker-profile-testimony", @readonly = "readonly" })
    </div>
    <div id="coworker-profile-mind-renew">
        <h4 style="text-align: center;">
            心意更新</h4>
        @Html.TextAreaFor(model => model.MindRenew, new { @class = "text-area-coworker-profile-mind-renew", @readonly = "readonly" })
    </div>
    <br class="clearfix" />
</div>
<div>
    @{Html.RenderPartial("_Sidebar");}
</div>
