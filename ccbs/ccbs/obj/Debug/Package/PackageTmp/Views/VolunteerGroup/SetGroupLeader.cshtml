@model ccbs.Models.SetLeaderModel
@{
    ViewBag.Title = "Set Group Leader";
}
<div id="content-no-sidebar">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <fieldset>
            <legend>Set Group Leader</legend>
            @Html.HiddenFor(model => model.Id, Model.Id)
            <div class="editor-label">
                @Html.LabelFor(model => model.LeaderId)
            </div>
            <div class="editor-field">
                @Html.DropDownList("LeaderId", String.Empty)
                @Html.ValidationMessageFor(model => model.LeaderId)
            </div>
            <p>
                <input type="submit" value="Set Leader" />
            </p>
        </fieldset>
    }
    <div style="padding-top: 20px;">
        <a onclick="window.history.go(-1);return false;">Go Back</a>
    </div>
    <br class="clearfix" />
</div>
