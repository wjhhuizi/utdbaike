@using MyResources = ccbs.Views.Volunteer.VolunteerResources
@model ccbs.Models.VolunteerInfoModel
@{
    ViewBag.Title = MyResources.Edit_Title;
}
<div id="content-no-sidebar">
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true, MyResources.Edit_Error)
        <fieldset>
            <legend>@MyResources.Edit_Title</legend>
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.UserName)
            @Html.HiddenFor(model => model.VolunteerOrganizationId)
            @Html.HiddenFor(model => model.VolunteerGroupId)
            @Html.HiddenFor(model => model.OrgPasscode)
            @Html.HiddenFor(model => model.RegTime)
            @Html.HiddenFor(model => model.HelpType)
            @Html.HiddenFor(model => model.Relation)
            @Html.HiddenFor(model => model.OtherRelation)
            <div class="editor-label">
                @Html.LabelFor(model => model.Name, @MyResources.Reg_Name)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Gender, @MyResources.Reg_Gender)
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(model => model.Gender, new[]
                {
                   new SelectListItem{Value="0", Text="Single-Female"},
                   new SelectListItem{Value="1", Text="Single-Male"}, 
                   new SelectListItem{Value="2", Text="Family"},
                })
                @Html.ValidationMessageFor(model => model.Gender)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Email, @MyResources.Reg_Email)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Phone, @MyResources.Reg_Phone)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Phone)
                @Html.ValidationMessageFor(model => model.Phone)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Address, @MyResources.Reg_Address)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.Address)
                @Html.ValidationMessageFor(model => model.Address)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.BriefIntro, @MyResources.Reg_SelfIntro)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.BriefIntro)
                @Html.ValidationMessageFor(model => model.BriefIntro)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Note, @MyResources.Reg_Note)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.Note)
                @Html.ValidationMessageFor(model => model.Note)
            </div>
            <div style="float: left;">
                <input type="submit" value="@MyResources.Reg_Submit" />
            </div>
            <div style="padding-left: 100px;">
                <a onclick="window.history.go(-1);return false;">@MyResources.Edit_Back</a>
            </div>
        </fieldset>
    }
</div>
